<Window x:Name="mainWin" x:Class="DataAnonymization.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Data Anonimization" Height="350" Width="576">
    <Grid Margin="0,0,22,0">
        <DataGrid x:Name="tableGrid" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="251" Width="328" ItemsSource="{Binding}"/>
        <Button x:Name="buttonToXML" Content="To XML" HorizontalAlignment="Left" Margin="10,266,0,0" VerticalAlignment="Top" Width="75" Click="buttonToXML_Click"/>
        <Button x:Name="buttonFromXML" Content="From XML" HorizontalAlignment="Left" Margin="90,266,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.133,-4" Click="buttonFromXML_Click"/>
        <Button x:Name="buttonkAnon" Content="k-Ano" HorizontalAlignment="Left" Margin="380,94,0,0" VerticalAlignment="Top" Width="75" Click="kAnonymization_Click"/>
        <TextBox x:Name="kValBox" HorizontalAlignment="Left" Height="23" Margin="391,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="64"/>
        <Label x:Name="kValLabel" Content="k:" HorizontalAlignment="Left" Margin="355,32,0,0" VerticalAlignment="Top"/>
        <Label x:Name="pidLabel" Content="PID:" HorizontalAlignment="Left" Margin="355,63,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="pidValBox" HorizontalAlignment="Left" Height="23" Margin="391,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="64"/>

    </Grid>
</Window>
